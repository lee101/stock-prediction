[Unit]
Description=Binance Chronos SOLUSDT trader (paper)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/nvme0n1-disk/code/stock-prediction
Environment=PYTHONPATH=/nvme0n1-disk/code/stock-prediction
Environment=PYTHONUNBUFFERED=1
Environment=PYTHON_BIN=/nvme0n1-disk/code/stock-prediction/.venv/bin/python
Environment=PAPER=1
Environment=BINANCE_TESTNET=1
Environment=BINANCE_BASE_ENDPOINT=https://testnet.binance.vision
ExecStart=/nvme0n1-disk/code/stock-prediction/.venv/bin/python -m binanceneural.trade_binance_hourly \
  --symbols SOLUSDT \
  --checkpoint /nvme0n1-disk/code/stock-prediction/binancechronossolexperiment2/checkpoints/chronos_sol_v2_test30_muon0975_20260204_114507/policy_checkpoint.pt \
  --horizon 1 \
  --sequence-length 72 \
  --forecast-horizons 1,4,24 \
  --forecast-cache-root /nvme0n1-disk/code/stock-prediction/binancechronossolexperiment/forecast_cache \
  --data-root /nvme0n1-disk/code/stock-prediction/trainingdatahourlybinance \
  --intensity-scale 1.0 \
  --min-gap-pct 0.0003 \
  --poll-seconds 30 \
  --expiry-minutes 90 \
  --price-tolerance 0.0008 \
  --dry-run
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
